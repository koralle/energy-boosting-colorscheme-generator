{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "biome": {
      "command": ["bun", "biome", "format", "--write", "$FILE"],
      "extensions": [".ts", ".tsx", ".json", ".jsonc", ".css"]
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["bunx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "panda": {
      "type": "local",
      "command": ["bunx", "panda", "mcp"]
    }
  }
}
