{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["bunx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["chrome-devtools-mcp"],
      "enabled": true
    }
  },
  "autoupdate": false,
  "formatter": {
    "biome": {
      "command": ["bun", "biome", "format", "$FILE", "--write"],
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".jsonc", ".css"]
    }
  },
  "watcher": {
    "ignore": ["node_modules", "dist/**", ".git/*"]
  },
  "permission": {
    "skill": "allow",
    "webfetch": "deny",
    "question": "allow"
  },
  "agent": {
    "plan": {
      "model": "zai-coding-plan/glm-4.7"
    },
    "build": {
      "model": "kimi-for-coding/k2p5"
    }
  }
}
